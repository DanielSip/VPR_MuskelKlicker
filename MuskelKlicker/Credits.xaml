        <Label Content="Dennis Martens" HorizontalAlignment="Left" Margin="340,220,0,0" VerticalAlignment="Top" FontFamily="Microsoft Himalaya" FontSize="24"/>
        <Label Content="Lars Meykel Stuhlmacher" HorizontalAlignment="Left" Margin="308,271,0,0" VerticalAlignment="Top" FontFamily="Microsoft Himalaya" FontSize="24"/>
