        <Button x:Name="bt_menu" Content="back to menu" HorizontalAlignment="Left" Margin="350,390,0,0" VerticalAlignment="Top" Width="100" FontFamily="Microsoft Himalaya" FontSize="20" Click="bt_menu_Click">
