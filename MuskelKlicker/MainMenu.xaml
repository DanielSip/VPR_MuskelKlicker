<Window x:Name="MainMenu1" x:Class="MuskelKlicker.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuskelKlicker"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="bt_new" Content="Neues Spiel" HorizontalAlignment="Left" Margin="366,150,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy" Content="Spielstand laden" HorizontalAlignment="Left" Margin="50,237,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="button_Copy1" Content="Spielstand speichern" HorizontalAlignment="Left" Margin="200,237,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_Copy2" Content="Credits" HorizontalAlignment="Right" Margin="0,237,200,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy3" Content="Optionen" HorizontalAlignment="Right" Margin="0,237,50,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bt_end" Content="Beenden" HorizontalAlignment="Left" Margin="366,300,0,0" VerticalAlignment="Top" Width="75" Click="bt_end_Click"/>

    </Grid>
</Window>
