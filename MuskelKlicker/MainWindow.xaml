<Window x:Name="MuskelKlicker" x:Class="MuskelKlicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuskelKlicker"
        mc:Ignorable="d"
        Title="MuskelKlicker" Height="450" Width="924.79" Loaded="Window_Loaded" Background="White" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="MainBackground.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="556*"/>
            <ColumnDefinition Width="328*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstbx_shopitems" HorizontalAlignment="Left" Height="181" Margin="524.215,10,0,0" VerticalAlignment="Top" Width="350" MouseDoubleClick="lstbx_shopitems_MouseDoubleClick" Grid.ColumnSpan="2" Grid.Column="2"/>

        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="278" Height="399" Click="Button_Click" Grid.ColumnSpan="3">
            <Image Source="MainClickPic.png" Height="396"></Image>
        </Button>
        <Label Content="Points:" HorizontalAlignment="Left" Margin="260.215,10,0,0" VerticalAlignment="Top" Width="80" Grid.Column="2"/>
        <Label x:Name="lbl_Points" Content="" HorizontalAlignment="Left" Margin="345.215,10,0,0" VerticalAlignment="Top" Width="99" Grid.Column="2"/>
        <Label x:Name="lab_ActiveClick" Content="Aktiver Klick" HorizontalAlignment="Left" Margin="281.215,157,0,0" VerticalAlignment="Top" Width="99" Grid.Column="2"/>
        <Label x:Name="lab_PassiveClick" Content="Passive Punkte" HorizontalAlignment="Left" Margin="385.215,157,0,0" VerticalAlignment="Top" Width="100" Grid.Column="2"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="80" Margin="281.215,72,0,0" VerticalAlignment="Top" Width="80" Source="ActiveClickPic.png" Grid.Column="2"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="80" Margin="385.215,72,0,0" VerticalAlignment="Top" Width="100" Source="PassiveClickPic.png" Grid.Column="2"/>
        <Label Content="Klicks:" HorizontalAlignment="Left" Margin="260.215,41,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.5,0.5" Grid.Column="2"/>
        <Label x:Name="lbl_Clicks" Content="" HorizontalAlignment="Left" Margin="345.215,41,0,0" VerticalAlignment="Top" Width="99" Grid.Column="2"/>
        <Button x:Name="bt_deleteSpielstand" Grid.ColumnSpan="2" Content="Delete Spielstand" Grid.Column="2" HorizontalAlignment="Left" Margin="546,217,0,0" VerticalAlignment="Top" Width="107" Click="bt_deleteSpielstand_Click"/>

    </Grid>
</Window>
