<Window x:Class="MuskelKlicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuskelKlicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstbx_shopitems" HorizontalAlignment="Left" Height="181" Margin="482,10,0,0" VerticalAlignment="Top" Width="300" MouseDoubleClick="lstbx_shopitems_MouseDoubleClick"/>
        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="278" Height="399" Click="Button_Click">
            <Image Source="MainClickPic.png" Height="396"></Image>
        </Button>
        <Label Content="Points:" HorizontalAlignment="Left" Margin="293,10,0,0" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="lbl_Points" Content="" HorizontalAlignment="Left" Margin="378,10,0,0" VerticalAlignment="Top" Width="99"/>
        <Label x:Name="lab_ActiveClick" Content="Active Click" HorizontalAlignment="Left" Margin="293,383,0,0" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="lab_PassiveClick" Content="Passive Click" HorizontalAlignment="Left" Margin="397,383,0,0" VerticalAlignment="Top" Width="80"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="80" Margin="293,298,0,0" VerticalAlignment="Top" Width="80" Source="ActiveClickPic.png"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="80" Margin="397,298,0,0" VerticalAlignment="Top" Width="80" Source="PassiveClickPic.png" Stretch="Fill"/>

    </Grid>
</Window>
